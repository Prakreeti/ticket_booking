<h3> You have selected </h3>
<table class="table table-hover">
	<thead>
		<td>Category</td>
		<td>Seat Number</td>
		<td>Price</td>
	</thead>
	<tbody>
		<% seats.each do |seat| %>
			<tr>
				<td><%= seat[:category] %></td>
				<td><%= seat[:seat] %></td>
				<td><%= seat[:price] %></td>
			</tr>
		<% end %>
		<tr>
			<td></td>
			<td>Total:</td>
			<td><h4><%= total_price %></h4></td>
			<td></td>

		</tr>
	</tbody>
</table>
 